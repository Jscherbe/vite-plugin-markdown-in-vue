{
  "name": "@ulu/vite-plugin-markdown-in-vue",
  "description": "This Vite plugin lets you write Markdown directly within Vue components or other files. It pre-processes the Markdown into HTML during the build process, removing the need for browser-side rendering",
  "version": "0.0.8",
  "type": "module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jscherbe/vite-plugin-markdown-in-vue.git"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "markdown",
    "vue",
    "render",
    "parse",
    "component",
    "components",
    "pre-processes",
    "build",
    "md",
    "plugin",
    "markdown-it",
    "markdown-vue",
    "vue-markdown"
  ],
  "author": "Joe Scherben",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jscherbe/vite-plugin-markdown-in-vue/issues"
  },
  "homepage": "https://github.com/Jscherbe/vite-plugin-markdown-in-vue#readme",
  "scripts": {
    "dev": "vite",
    "dev:inspect:broken": "node --inspect-brk node_modules/vite",
    "dev:inspect": "NODE_OPTIONS='--inspect' vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.1",
    "unplugin-vue-markdown": "^0.26.2",
    "vite": "^5.0.5",
    "vue": "^3.3.10"
  }
}
